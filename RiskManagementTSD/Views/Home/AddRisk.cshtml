@model RiskManagementTSD.Models.AddRisk
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add risk</title>
</head>
<body>
    <form asp-action="AddRisk" method="post">
        <p>
            <label asp-for="Name">Name the risk:</label>
            <input asp-for="Name" />
        </p>
        <p>
            <label asp-for="Description">Give some more details:</label>
            <input asp-for="Description" />
        </p>
        <p>
            <label>What is the probability of the risk?</label>
            <select asp-for="Probability">
                <option value="">Choose an option</option>
                <option value="20">Low</option>
                <option value="50">Medium</option>
                <option value="80">High</option>
            </select>
        </p>
        <p>
            <label>What is the expected impact of the risk?</label>
            <select asp-for="Impact">
                <option value="">Choose an option</option>
                <option value="20">Low</option>
                <option value="50">Medium</option>
                <option value="80">High</option>
            </select>
        </p>
        <button type="submit">Submit risk</button>
    </form>
</body>
</html>